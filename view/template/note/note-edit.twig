                <label for="title">Titre</label>
                <input type="text" class="form-control" id="title" name="title" value="{{ note.title }}" placeholder="Titre...">
            </div>
            <div class="form-group">
                <label for="content">Contenu</label>
                <input type="text" class="form-control" id="content" name="content" value="{{ note.content }}" placeholder="Contenu...">
            </div>
            <input class="btn btn-primary" type="submit" value="Sauvegarder" /*>
        </form>
    </div>
{% endblock %}
  
